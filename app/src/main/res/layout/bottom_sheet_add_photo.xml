<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/bottom_sheet_add_photo_from_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:backgroundTint="@color/transparent"
        android:drawableLeft="@drawable/ic_photo_library_black_24dp"
        android:text="  From gallery"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:shadowColor="@color/transparent"
        android:outlineAmbientShadowColor="@color/transparent"
        android:outlineSpotShadowColor="@color/transparent"
        />

    <Button
        android:id="@+id/bottom_sheet_add_photo_from_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@color/transparent"
        android:backgroundTint="@color/transparent"
        android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
        android:outlineAmbientShadowColor="@color/transparent"
        android:outlineSpotShadowColor="@color/transparent"
        android:shadowColor="@color/transparent"
        android:text="  From camera"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_add_photo_from_gallery" />


</androidx.constraintlayout.widget.ConstraintLayout>